# Production Environment Configuration
NODE_ENV=production
VITE_NODE_ENV=production

# Production Server Configuration
PROD_PORT=3000
PROD_HOST=0.0.0.0
PROD_BASE_URL=https://your-production-domain.com

# API Configuration for Production
GEMINI_API_KEY=your_production_api_key_here
VITE_GEMINI_API_KEY=your_production_api_key_here

# Mock Configuration (disabled in production)
USE_MOCKS=false
MOCK_GEMINI_API=false
MOCK_SPEECH_SYNTHESIS=false
MOCK_EXTERNAL_IMAGES=false

# Production Database
PROD_DB_PATH=./prod-data/prod.db

# Production Timeouts (optimized for performance)
PROD_TIMEOUT=15000
PROD_PAGE_LOAD_TIMEOUT=8000
PROD_ELEMENT_WAIT_TIMEOUT=3000

# Logging Configuration
PROD_LOG_LEVEL=warn
PROD_LOG_FILE=./logs/prod.log

# Browser Configuration for Production
PROD_BROWSER=headless
PROD_BROWSER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage,--disable-gpu