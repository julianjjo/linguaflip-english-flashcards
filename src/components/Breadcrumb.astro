---
interface BreadcrumbItem {
  label: string;
  href?: string;
  current?: boolean;
}

interface BreadcrumbProps {
  items: BreadcrumbItem[];
}

const { items } = Astro.props as BreadcrumbProps;
---

{
  items.length > 0 && (
    <nav class="mb-4 flex" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2">
        {items.map((item, index) => (
          <li class="flex items-center">
            {index > 0 && (
              <svg
                class="mx-2 h-4 w-4 flex-shrink-0 text-neutral-400"
                fill="currentColor"
                viewBox="0 0 20 20"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                  clip-rule="evenodd"
                />
              </svg>
            )}

            {item.current ? (
              <span
                class="text-sm font-medium text-primary-600"
                aria-current="page"
              >
                {item.label}
              </span>
            ) : item.href ? (
              <a
                href={item.href}
                class="text-sm text-neutral-600 transition-colors duration-200 hover:text-primary-600"
              >
                {item.label}
              </a>
            ) : (
              <span class="text-sm text-neutral-600">{item.label}</span>
            )}
          </li>
        ))}
      </ol>
    </nav>
  )
}
