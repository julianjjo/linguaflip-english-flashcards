{
  "name": "linguaflip-astro",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "build:preview": "astro build --mode preview",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check",
    "check:watch": "astro check --watch",
    "test": "jest",
    "test:design": "jest tests/design-tests.js",
    "test:interaction": "jest tests/interaction-tests.js",
    "test:all": "npm run test:design && npm run test:interaction",
    "test:parallel": "NODE_ENV=test node tests/run-parallel-tests.js",
    "test:e2e": "playwright test",
    "test:ci": "npm run test:ci:unit",
    "test:health": "NODE_ENV=test node tests/health-check.js",
    "test:setup": "NODE_ENV=test node tests/setup-test-env.js",
    "test:cleanup": "NODE_ENV=test node tests/cleanup-test-env.js",
    "test:ci:unit": "jest --ci --coverage --testResultsProcessor=jest-junit",
    "test:ci:setup": "npm run test:setup && npm run test:health",
    "test:ci:teardown": "npm run test:cleanup",
    "design-review": "node design-review.js",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.astro test-results",
    "deploy": "npm run build && npm run preview"
  },
  "dependencies": {
    "@astrojs/node": "^9.4.4",
    "@astrojs/react": "^4.1.2",
    "@astrojs/tailwind": "^5.1.4",
    "@google/genai": "latest",
    "@nanostores/react": "^1.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "astro": "^5.13.4",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^11.5.0",
    "express": "^4.19.2",
    "express-rate-limit": "^8.0.1",
    "jsonwebtoken": "^9.0.2",
    "nanostores": "^0.10.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@playwright/test": "^1.55.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/chai": "^5.2.2",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.14.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "autoprefixer": "^10.4.21",
    "chai": "^6.0.1",
    "dotenv": "^17.2.2",
    "eslint": "^9.17.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "jest": "^30.1.3",
    "jest-environment-node": "^30.1.2",
    "jest-junit": "^16.0.0",
    "mocha": "^11.7.1",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "puppeteer": "^24.17.1",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.2"
  }
}
