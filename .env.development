# Development Environment Configuration
NODE_ENV=development
VITE_NODE_ENV=development

# Development Server Configuration
DEV_PORT=5173
DEV_HOST=localhost
DEV_BASE_URL=http://localhost:5173

# API Configuration for Development
GEMINI_API_KEY=your_development_api_key_here
VITE_GEMINI_API_KEY=your_development_api_key_here

# Mock Configuration (disabled in development)
USE_MOCKS=false
MOCK_GEMINI_API=false
MOCK_SPEECH_SYNTHESIS=false
MOCK_EXTERNAL_IMAGES=false

# Development Database
DEV_DB_PATH=./dev-data/dev.db

# MongoDB Configuration for Development
MONGODB_URI=mongodb://localhost:27017/?directConnection=true&serverSelectionTimeoutMS=2000&appName=linguaflip-dev
MONGODB_DATABASE=linguaflip_dev
MONGODB_CONNECTION_TIMEOUT=2000
MONGODB_POOL_SIZE=10
JWT_SECRET=dev-jwt-secret-key-change-in-production

# Development Timeouts
DEV_TIMEOUT=60000
DEV_PAGE_LOAD_TIMEOUT=15000
DEV_ELEMENT_WAIT_TIMEOUT=10000

# Logging Configuration
DEV_LOG_LEVEL=debug
DEV_LOG_FILE=./logs/dev.log

# Browser Configuration for Development
DEV_BROWSER=false
DEV_BROWSER_ARGS=--disable-web-security,--disable-features=VizDisplayCompositor

# Security Configuration for Development
MAX_LOGIN_ATTEMPTS=100
LOCKOUT_DURATION_MINUTES=5
RATE_LIMIT_REGISTER=100
RATE_LIMIT_LOGIN=100
RATE_LIMIT_WINDOW_MS=3600000
BCRYPT_ROUNDS=10