# Test Environment Configuration
NODE_ENV=test
VITE_NODE_ENV=test

# Test Server Configuration
TEST_PORT=4322
TEST_HOST=localhost
TEST_BASE_URL=http://localhost:4322

# API Configuration for Testing
GEMINI_API_KEY=test_key_placeholder
VITE_GEMINI_API_KEY=test_key_placeholder

# Mock Configuration
USE_MOCKS=true
MOCK_GEMINI_API=true
MOCK_SPEECH_SYNTHESIS=true
MOCK_EXTERNAL_IMAGES=true

# Test Database (if needed)
TEST_DB_PATH=./test-data/test.db

# MongoDB Configuration for Testing
MONGODB_TEST_URI=mongodb://localhost:27017
MONGODB_TEST_DATABASE=linguaflip_test
MONGODB_CONNECTION_TIMEOUT=3000
MONGODB_POOL_SIZE=5

# Test Timeouts (in milliseconds)
TEST_TIMEOUT=30000
TEST_PAGE_LOAD_TIMEOUT=10000
TEST_ELEMENT_WAIT_TIMEOUT=5000

# Parallel Testing Configuration
MAX_CONCURRENT_TESTS=4
TEST_PARALLEL=true

# CI/CD Configuration
CI=false
CONTINUOUS_INTEGRATION=false

# Logging Configuration
TEST_LOG_LEVEL=info
TEST_LOG_FILE=./test-results/test.log

# Browser Configuration
TEST_BROWSER=headless
TEST_BROWSER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3